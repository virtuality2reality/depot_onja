<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<% if @counter > 5 %>
  <%= pluralize(@counter, "visit") %>
<%end%>

<h1>Ruby and Rails Catalog books</h1>
<% @products.each do |product| %>
  <div class="entry">    
  
   <% form_tag(line_items_path(:product_id => product), :remote => true) do %> 
     <%= image_submit_tag (product.image_url, :alt => product.title, :title => "Add to cart", :id => "product_picture", :width => "90px") %>
    <% end %>

    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line" >
      <span class="price" ><%= number_to_currency(product.price) %></span>
      <%= button_to "Add to cart", line_items_path(:product_id => product), :remote => true %>
    </div>

  </div>
<% end %>
